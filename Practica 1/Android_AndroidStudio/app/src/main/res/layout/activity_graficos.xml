<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Graficos">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/graficaBarras"
        android:layout_width="0dp"
        android:layout_height="228dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="194dp"
        app:layout_constraintBottom_toTopOf="@+id/txtMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graficaBarras">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50px">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2 en el ambiente: "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

            <Space
                android:layout_width="38dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/txtCo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50px">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO en el ambiente: "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

            <Space
                android:layout_width="38dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/txtCo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50px">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uv en el ambiente: "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

            <Space
                android:layout_width="38dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/txtUv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graficaBarras" />

</android.support.constraint.ConstraintLayout>