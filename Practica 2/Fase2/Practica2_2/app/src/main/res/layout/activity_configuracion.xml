<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008080"
    tools:context=".Configuracion">

    <TextView
        android:id="@+id/textView"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toStartOf="@+id/swMonitoreo"
        android:layout_toLeftOf="@+id/swMonitoreo"
        android:text="Almacenar Datos en Nube:"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/swMonitoreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="On "
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="202dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/swCarga"
        android:layout_toLeftOf="@+id/swCarga"
        android:text="Liberar Carga final destino:"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/swCarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swMonitoreo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="On "
        android:textColor="@color/colorAccent"
        android:textOff="On"
        android:textOn="Off"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_toStartOf="@+id/swTiempo"
        android:layout_toLeftOf="@+id/swTiempo"
        android:text="Detener  por tiempo :"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/swTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swCarga"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="On"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_toStartOf="@+id/txtSegundos"
        android:layout_toLeftOf="@+id/txtSegundos"
        android:text="Ingrese los segundos de espera :"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtSegundos"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swTiempo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_toStartOf="@+id/swAutomatico"
        android:layout_toLeftOf="@+id/swAutomatico"
        android:text="Esquivar Obstaculos Automatico:"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/swAutomatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSegundos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="On"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:background="@drawable/circle_buttom"
        android:text="Iniciar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="187dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_toStartOf="@+id/txtDistancia"
        android:layout_toLeftOf="@+id/txtDistancia"
        android:text="Distancia recorrida (cm): "
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txtDistancia"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swAutomatico"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="numberSigned" />
</RelativeLayout>