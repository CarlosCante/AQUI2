<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="10px" />

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="80px">

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnOnBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activar Bluetooth" />

            <Space
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="273dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4">

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="40px">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitoreo :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="68dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/swMonitoreo"
                android:layout_width="101dp"
                android:minHeight="10px"
                android:text="Activar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="20px" />

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="40px">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liberacion \n de Carga:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="43dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/swCarga"
                android:layout_width="wrap_content"
                android:minHeight="10px"
                android:text="Activar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="90px">

            <Space
                android:layout_width="39dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activacion de evasion por espera"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="280dp"
        android:layout_height="177dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60px">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuracion \n a distancia"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="35dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/swDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="20px" />

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="60px">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuracion \n por tiempo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="37dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/swTiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="20px"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="60px">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese Segundos"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="38dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/txtSegundos"
                android:layout_width="52dp"
                android:layout_height="58dp"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="277dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="150px" >

            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:text="INICIAR" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>